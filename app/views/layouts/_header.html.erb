<div class='header'>
  <%= link_to "TOP", root_path %>
  <% if current_user %>
    <div>
      <%= current_user.email %>.
      <%= link_to "Log Out", logout_path %>
    </div>
  <% else %>
    <div>
      <%= link_to "Sign Up", signup_path %>
      or
      <%= link_to "Log In", login_path %>
    </div>
  <% end %>
</div>
